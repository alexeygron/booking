<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/ScreenCommon">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:visibility="visible">

        <TextView
                android:id="@+id/title"
                style="@style/TextCommon.ToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>

    <TextView
            style="@style/SectionMenuContainer.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/visa_mastercard"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="@dimen/color_divider_width"
                android:layout_height="match_parent"
                android:background="@color/lightOliveGreen"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/withdrawal_date"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginStart="@dimen/spacing_15dp"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/text_size_small"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05.02.2019"
                android:layout_marginEnd="@dimen/spacing_15dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="@dimen/color_divider_width"
                android:layout_height="match_parent"
                android:background="@color/lightCadetBlue"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/visa_mastercard"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginStart="@dimen/spacing_15dp"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/text_size_small"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****0040"
                android:layout_marginEnd="@dimen/spacing_15dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="@dimen/color_divider_width"
                android:layout_height="match_parent"
                android:background="@color/lightPink"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/withdrawal_sum"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginStart="@dimen/spacing_15dp"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/text_size_small"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00 ₽"
                android:layout_marginEnd="@dimen/spacing_15dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="@dimen/color_divider_width"
                android:layout_height="match_parent"
                android:background="@color/aliceBlue"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/commission"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginStart="@dimen/spacing_15dp"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/text_size_small"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.00 ₽"
                android:layout_marginEnd="@dimen/spacing_15dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <View
                android:layout_width="@dimen/color_divider_width"
                android:layout_height="match_parent"
                android:background="@color/antiqueWhite"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_weight="1"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginStart="@dimen/spacing_15dp"
                android:textColor="@color/dimGray"
                android:textSize="@dimen/text_size_small"/>

        <TextView
                style="@style/TextCommon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Успешен"
                android:layout_marginEnd="@dimen/spacing_15dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightGray"/>

</LinearLayout>